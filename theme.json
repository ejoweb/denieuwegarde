{
	"version": 2,
	"settings": {
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultGradients": false,
			"defaultPalette": false,
			"background": true,
			"text": true,
			"link": true,
			"palette": [
				{ "name": "Base", 	    "slug": "base", 	  "color": "#ECE2BC" },
				{ "name": "Second Base","slug": "second-base","color": "#4734242E" },
				{ "name": "Contrast", 	"slug": "contrast",   "color": "#244734" },
				{ "name": "Primary", 	"slug": "primary",	  "color": "#A92F20" }
			],
			"custom": true,
			"gradients": [],
			"duotone": [
				{ "name": "Black and white", "slug": "black-and-white", "colors": [ "#000000", "#ffffff" ] }
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "Rochester",
					"slug": "rochester",
					"fontFamily": "Rochester,ui-serif, Georgia, serif",
					"fontFace": [
						{
							"fontFamily": "Rochester",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/rochester/Rochester-Regular.woff2" ]
						}
					]
				},
				{
					"fontFamily": "Metropolis, -apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
					"slug": "metropolis",
					"name": "Metropolis",
					"fontFace": [
						{
							"fontFamily": "Metropolis",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/metropolis/Metropolis-Regular.woff2" ]
						},
						{
							"fontFamily": "Metropolis",
							"fontWeight": "400",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/metropolis/Metropolis-RegularItalic.woff2" ]
						},
						{
							"fontFamily": "Metropolis",
							"fontWeight": "700",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/metropolis/Metropolis-Bold.woff2" ]
						},
						{
							"fontFamily": "Metropolis",
							"fontWeight": "700",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/metropolis/Metropolis-BoldItalic.woff2" ]
						}
					]
				}
			],
			"fontSizes": [
				{ "name": "Small",    "slug": "small",    "size": "1rem" },
				{ "name": "Medium",   "slug": "medium",   "size": "1.125rem" },
				{ "name": "Large",    "slug": "large",    "size": "1.5rem" },
				{ "name": "X-large",  "slug": "x-large",  "size": "2.25rem" },
				{ "name": "XX Large", "slug": "xx-large", "size": "3.5rem" }
			],
			"customFontSize": false,
            "lineHeight": true,
            "fontStyle": true,
			"fontWeight": true,
			"dropCap": false,
            "letterSpacing": false,
            "textDecoration": true,
            "textTransform": false
		},
		"border": {
			"color": true, 
			"radius": true, 
			"style": true, 
			"width": true
		},
		"layout": {
			"contentSize": "40rem",
			"wideSize": "56rem"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"spacingSizes": [
				{ "name": "1", "slug": "30", "size": "1rem" },
				{ "name": "2", "slug": "40", "size": "1.5rem" },
				{ "name": "3", "slug": "50", "size": "2.25rem" },
				{ "name": "4", "slug": "60", "size": "3.5rem" },
				{ "name": "5", "slug": "70", "size": "5.25rem" }
			],
			"units": [ "%",	"px", "em", "rem", "vh", "vw" ]
		},
		"custom": {
			"typography": {
				"line-height": {
					"small": 1.1,
					"normal": 1.5
				}
			},
			"borderRadius": {
				"small": "6px",
				"medium": "10px"
			},
			"layout": {
				"fullSize": "68rem"
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": 	  "var(--wp--preset--color--contrast)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--metropolis)",
			"lineHeight": "var(--wp--custom--typography--line-height--normal)",
			"fontSize":   "var(--wp--preset--font-size--medium)"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--40)",
			"padding": {
				"top": "0",
				"right": "var(--wp--preset--spacing--40)",
				"bottom": "0",
				"left": "var(--wp--preset--spacing--40)"
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "currentColor"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"typography": {
						"textDecoration": "underline"
					}
				}
			},
			"button": {
				"border": {
					"radius": "var(--wp--custom--border-radius--small)"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--rochester)",
					"fontWeight": "400",
					"lineHeight": "var(--wp--custom--typography--line-height--small)"
				},
				"color": {
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}				
			},
			"core/post-title": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						},
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/post-content": {
				"spacing": {
					"blockGap": 0
				}
			},
			"core/column": {
				"border": {
					"radius": "var(--wp--custom--border-radius--medium)"
				}
			},
			"core/separator": {
				"color": {
					"background": "var(--wp--preset--color--second-base)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--80)",
						"top": "var(--wp--preset--spacing--80)"
					}
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "404",
			"postTypes": [
				"page"
			],
			"title": "404"
		}
	],
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
}
